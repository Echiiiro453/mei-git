{
  "wifi": {
    "Realtek_RTL8812AU_8821AU": {
      "device_ids": ["0bda:8812", "0bda:a811", "0bda:881a", "0bda:8811"],
      "type": "git",
      "repo": "https://github.com/aircrack-ng/rtl8812au.git",
      "module": "8812au",
      "dependencies": ["dkms", "build-essential", "linux-headers-$(uname -r)"],
      "build_steps": [
        "sudo make dkms_install"
      ],
      "comment": "Driver popular para adaptadores Wi-Fi AC. Essencial para auditoria de redes."
    },
    "Realtek_RTL8188EU": {
      "device_ids": ["0bda:8179", "0bda:0179"],
      "type": "git",
      "repo": "https://github.com/lwfinger/rtl8188eu.git",
      "module": "8188eu",
      "dependencies": ["git", "dkms", "build-essential"],
      "build_steps": [
        "sudo make all",
        "sudo make install"
      ],
      "comment": "Para muitos dongles Wi-Fi N baratos e notebooks mais antigos."
    },
    "Broadcom_BCM43xx_STA": {
      "device_ids": ["14e4:43a0", "14e4:43c3", "14e4:43b1"],
      "module": "wl",
      "type": "apt",
      "package": "broadcom-sta-dkms",
      "dependencies": ["broadcom-sta-dkms"],
      "comment": "O infame driver proprietário da Broadcom necessário para muitos MacBooks e notebooks Dell/HP."
    }
  },
  "video": {
    "NVIDIA_Legacy_340": {
      "device_ids": ["10de:0fdf", "10de:104a", "10de:0649"],
      "type": "git",
      "repo": "https://github.com/mei-git/NVIDIA-Linux-x86_64-340.108-patched.git",
      "module": "nvidia",
      "dependencies": ["dkms", "build-essential", "linux-headers-$(uname -r)"],
      "build_steps": [
        "sudo make install"
      ],
      "post_install": [
        "sudo modprobe nvidia"
      ],
      "comment": "Driver essencial para placas NVIDIA antigas (séries 8 a 300) que não são mais suportadas pelos drivers novos."
    }
  },
  "ethernet": {
    "Realtek_R8168": {
      "device_ids": ["10ec:8168"],
      "type": "git",
      "repo": "https://github.com/mtorromeo/r8168.git",
      "module": "r8168",
      "dependencies": ["dkms", "build-essential", "linux-headers-$(uname -r)"],
      "build_steps": [
        "sudo ./autorun.sh"
      ],
      "comment": "O driver oficial da Realtek para sua placa Gigabit Ethernet. Frequentemente mais estável que o módulo 'r8169' do kernel."
    }
  },
  "printer": {
    "HP_Plugin": {
        "device_ids": ["03f0:"],
        "type": "shell",
        "dependencies": ["hplip"],
        "build_steps": [
            "sudo hp-plugin -i"
        ],
        "comment": "Muitas impressoras HP exigem um plugin proprietário para funcionar. Este comando automatiza o download e a instalação."
    }
  }
}
